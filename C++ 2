#include <iostream>
using namespace std ;
int main() {
int n,n1;
cout<<"enter the size of array : ";
cin >> n;
int *arr = new int[n];
for(int i=0;i<n;i++){
    cout<<"enter the value of arr["<<i<<"]index : ";
    cin>>arr[i];
}
cout<<endl<<"enter the elements are : "<<endl;
for(int i=0;i<n;i++){
    cout<<arr[i]<<endl;
}
cout<<"enter the new size of array : ";
cin>>n1;
int *arr = new int[n1]{
    arr[i] = arr[i];
}
if(n1>n){
    fot(int i=n; i<n1;i++){
        cout<<"enter the element at arr["<<i<<"] index : ";
        cin>>arr[i];
    }
}
cout<<"element in new array = ";
for(int i = 0; i< n1;i++){
    cout<<arr[i]<<endl;
}
    }
}
