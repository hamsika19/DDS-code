SELECTION SORT

#include <iostream>
using namespace std;
#include<algorithm>
int main() {
    int arr[] = {12,5,8,7,6};
    int n = sizeof(arr)/sizeof(arr[0]);
    for(int i=0;i<n;i++){
        int minIndex=i;
        for(int j=i+1;j<n;j++){
            if(arr[j] < arr[minIndex]){
                minIndex=j;
            }
        }
        swap(arr[i],arr[minIndex]);
    }
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
}

Output:
5 6 7 8 12
